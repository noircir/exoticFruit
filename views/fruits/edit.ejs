<% include ../partials/header %>

<div class="container">

	<h1 style="text-align: center;">Edit <%= fruit.name.substring(0, 30) %></h1>

	<div style="width:43%; margin: 20px auto; ">

		<form action="/index/<%= fruit._id %>?_method=PUT" method="POST">

			<div class="form-group">
				<label>Fruit name:</label>
				<input class="form-control" type="text" name="fruit[name]" value="<%= fruit.name %>">
			</div>

			<div class="form-group">
				<label>Fruit image:</label>
				<input class="form-control" type="text" name="fruit[image]" value="<%= fruit.image%>">
			</div>

			<div class="form-group">
				<label>Price per kilogram:</label>
				<input class="form-control" type="number" name="fruit[price]" placeholder="Price" min="0.50" step="0.50">
			</div>

			<div class="form-group">
			    <label for="location">Location</label>
			    <input class="form-control" type="text" name="location" value="<%= fruit.location %>">
			</div>

			<div class="form-group">
				<label>Description:</label>
				<input class="form-control" type="text" name="fruit[description]" value="<%= fruit.description%>">
			</div>

			<div class="form-group">
				<button class="btn btn-warning btn-block">Submit</button>
			</div>

		</form>

	</div>

	<div>
		<a href="/index" class="btn btn-default btn-sm">Go back</a>
	</div>

</div>



<% include ../partials/footer %>
